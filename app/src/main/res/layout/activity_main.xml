<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wmora.webnavigationexample.MainActivity">

    <RelativeLayout android:id="@+id/navigation_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <ImageButton android:id="@+id/ib_backWeb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="@android:color/transparent"
            android:src="@drawable/navigation__backurl_2"/>

        <ImageButton android:id="@+id/ib_forwardWeb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_toRightOf="@+id/ib_backWeb"
            android:layout_toEndOf="@+id/ib_backWeb"
            android:background="@android:color/transparent"
            android:src="@drawable/navigation__fwdurl"/>
    </RelativeLayout>

    <FrameLayout android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/navigation_container"/>

</RelativeLayout>
